                        <route>/v2/carts/:cartId/items/:itemId</route>
                        <action_type>collection</action_type>
                    </route_v2_carts_id_items_id>
                </routes>
                <versions>2</versions>
            </shopgate_cloudapi_v2_carts_items>
            <shopgate_cloudapi_v2_carts_url>
