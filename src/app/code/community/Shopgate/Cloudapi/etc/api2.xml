            </shopgate_cloudapi_v2_customers_addresses>
            <shopgate_cloudapi_v2_customers_email>
                <group>shopgate_cloudapi_v2_customers</group>
                <model>shopgate_cloudapi/api2_customers_email</model>
                <title>Email</title>
                <sort_order>67</sort_order>
