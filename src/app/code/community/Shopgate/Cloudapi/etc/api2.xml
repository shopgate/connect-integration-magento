                    <customer>
                        <create>1</create>
                    </customer>
                </privileges>
                <force_attributes>
                    <customer>
                        <oldPassword>Old password to validate against</oldPassword>
                        <password>New Password</password>
                    </customer>
                </force_attributes>
                <validators>
                    <eav>
                        <customer>
                            <entity_model>customer/customer</entity_model>
                            <form_model>customer/form</form_model>
                            <form_code>
                                <update>customer_account_edit</update>
                            </form_code>
                        </customer>
                    </eav>
                </validators>
